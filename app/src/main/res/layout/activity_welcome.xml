<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loginbkg"
    tools:context=".welcomeActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome To RGMCET"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/medium_slate_blue"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Register As Student"
                android:id="@+id/stubutton"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/medium_slate_blue"
                android:textSize="16sp"
                app:cornerRadius="30dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Register As Faculty"
                android:id="@+id/facbutton"
                android:textSize="16sp"
                android:backgroundTint="@color/medium_slate_blue"
                android:layout_marginTop="20dp"
                app:cornerRadius="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already an user? Login"
                android:id="@+id/login"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/medium_slate_blue"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>