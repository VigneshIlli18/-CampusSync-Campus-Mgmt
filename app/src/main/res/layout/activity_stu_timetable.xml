<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:padding="20dp">

            <AutoCompleteTextView
                android:id="@+id/TimetabletAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter Branch And Year-Sem"
                android:textColor="@color/black"
                android:completionThreshold="1"
                android:inputType="textAutoComplete"
                android:popupBackground="@color/white"
                android:popupElevation="8dp"
                android:dropDownVerticalOffset="-8dp"
                android:dropDownWidth="wrap_content"
                android:dropDownHeight="wrap_content"
                android:dropDownAnchor="@id/TimetabletAutoCompleteTextView"
                android:entries="@array/BranchANDSem" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/viewtimetable"
                android:layout_height="60dp"
                android:text="VIEW TIMETABLE"
                android:backgroundTint="@color/medium_slate_blue"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>